---
import Section from "./Section.astro";
import type { ExperienceProps } from "@types";

interface Props {
  experience: ExperienceProps[];
}

const { experience } = Astro.props;
---

<Section text="Experiencia Laboral" href="experience">
  {
    experience.map(({ company, position, startDate, endDate, summary, tecnologies }) => (
      <div class="mb-10">
        <h3 class="text-2xl font-serif font-semibold text-white mb-1.5">
          {company}
        </h3>
        <div class="flex flex-col items-start pb-5">
          <h4 class="text-2xl font-serif text-primary font-medium mb-0.5">
            {position}
          </h4>
          <span class="text-sm text-white/70 pb-[2px]">
            {startDate} â€” {endDate}
          </span>
        </div>
        {Array.isArray(summary) ? (
          <ul class="list-none">
            {summary.map((log) => (
              <li class="text-base relative text-neutral pl-8 mb-3 before:absolute before:left-0 before:top-1 before:content-[url(/check.svg)]">
                {log}
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-base text-neutral">{summary}</p>
        )}
        <div class="py-3">
          {Array.isArray(tecnologies) ? (
          <ul class="flex space-x-6">
            {tecnologies.map((image) => (
              <li class="">
                <img src={image} class="max-w-12 max-h-12 rounded-full hover:scale-125" alt="">
              </li>
            ))}
          </ul>
          ):''}
        </div>
      </div>
    ))
  }
</Section>
